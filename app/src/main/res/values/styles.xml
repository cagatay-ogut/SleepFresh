<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="checkboxStyle">@style/CustomCheckBox</item>
        <item name="spinnerDropDownItemStyle">@style/CustomSpinnerDropDownItemStyle</item>
    </style>

    <style name="CustomTitleTextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="CustomCheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:buttonTint">@color/primaryTextColor</item>
    </style>

    <style name="CustomSpinnerDropDownItemStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:tint">@color/secondaryLightColor</item>
    </style>
</resources>
